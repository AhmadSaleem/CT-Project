<%= form_for @team do |f| %>
  <div class="row">
    <div class="col-md-10">
      <% if @team.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @team.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <h2>Edit Players</h2>
  <div class="row">
    <div class="col-md-7">
      <div class="align">
        <p>
          Budget Allowed: <strong><%= @team.tournament_budget %><br></strong>
          Modifcations Remaining: <strong><%= @team.modifications_remaining %></strong>
        </p>
      </div>
      <div class="card">
        <div class="content" >
          <div id='players'>
            <%= f.fields_for :team_players do |player| %>
              <%= render 'team_player_fields', f: player %>
            <% end %>
          </div>
          <%= f.submit 'Update Team', class: "btn btn-primary" %>
          <%= link_to 'Cancel', @team, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
