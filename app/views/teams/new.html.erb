<%= form_for @team do |f| %>
  <div class="row">
    <div class="col-md-10">
      <% if @team.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @team.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <h2>Create team</h2>
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <div class="card">
          <div class="content">
            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <%= f.label :tournament_id, "Choose Tournament: " %>
                  <%= f.collection_select :tournament_id, Tournament.order(:title), :id, :title, {}, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                <div class="form-group">
                  <%= f.label :team_name, class: "control-label" %>
                  <%= f.text_field :team_name, class: "form-control" %>
                </div>
              </div>
            </div>

            <%= f.submit "Create Team", class: "btn btn-primary" %>
            <%= link_to "Cancel", teams_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
