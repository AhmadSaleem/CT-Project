<%= form_for @team do |f| %>
  <div class="row">
    <div class="col-md-10">
      <% if @team.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @team.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
    <div class="col-md-7">
      <h2>Enroll in <%= @tournament.title %></h2>
      <%= f.hidden_field :tournament_id, value: @tournament.id %>
      <div class="card">
        <div class="content">
          <div class="form-group">
            <%= f.label :team_name, class: "control-label" %>
            <%= f.text_field :team_name, class: "form-control" %>
          </div>

          <%= f.submit "Create Team", class: "btn btn-primary" %>
          <%= link_to "Cancel", tournaments_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
