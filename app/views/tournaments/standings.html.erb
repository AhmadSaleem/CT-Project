
<h2>Standings</h2>
<div class="row">
  <div class="col-md-5">
    <div class="card">
      <div class="header">
        <h4 class="title"><%= @tournament.title %></h4>
      </div>
      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <% if @tournament.teams.present? %>
            <thead>
              <th>Team Name</th>
              <th>Points Earned</th>
            </thead>
            <tbody>
              <% @tournament.teams.ordered_by_points.each do |team| %>
                <tr>
                  <td><%= team.team_name %></td>
                  <td><%= team.points_earned %><td>
                </tr>
              <% end %>
            </tbody>
          <% else %>
            <p>Tounrament does not have any team<p>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
