
<h2>Tournament Standings</h2>
<%= form_with(model: @tournament) do |form| %>
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="content">
          <div class="form-group">
            <%= form.label "Select Tournament", class: "control-label" %>
            <%= form.select :id, @tournaments.pluck(:title, :id), {}, class: "form-control", id: "select-tournament" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<h2>Teams</h2>
<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Team Name</th>
              <th>Modifiactions Remaining</th>
              <th>Points Earned</th>
            </tr>
          </thead>
          <tbody id="teams-table-body">
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
